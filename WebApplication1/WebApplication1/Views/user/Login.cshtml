@model DAL.user

@{
    ViewBag.Title = "Prijava";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prijava</title>
</head>
<body>
    <div style="margin-top: 3%; margin-left: 10%;" class="form-horizontal">
        <div>
            <h1><b>Prijava u sustav</b></h1>
        </div>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h3>Unesite svoje podatke kako biste nastavili s radom</h3>
                <br />


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group" style="margin-left: 3%">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.full_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Ime i prezime" } })
                        @Html.ValidationMessageFor(model => model.full_name, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group" style="margin-left: 3%">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", placeholder = "Šifra", type="Password" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-left: -16.5%">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

    </div>
    <br />
    <br />
    <br />
    <br />
    <br />

</body>
</html>
